{
  "rules": {
    "users": {
      "$uid": {
        // Only allow read/write access to own data
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",

        "profile": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },

        "alerts": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },

        "transactions": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },

        "balance": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },

        "trades": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },

        "settings": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },

    "traders": {
      ".read": "auth != null",
      "$traderId": {
        ".write": "$traderId === auth.uid",
        "followers": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },

    "socialTrading": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}